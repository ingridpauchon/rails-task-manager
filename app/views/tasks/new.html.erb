<%= form_for @task do |f| %>
<%= f.label :title %>
<%= f.text_field :title, placeholder: 'Type a title' %>
<%= f.label :details %>
<%= f.text_field :details, placeholder: 'Type some details' %>
<%= f.label :completed %>
<%= f.check_box :completed, {}, true, false %>
<%= f.submit 'save task' %>
<% end %>
